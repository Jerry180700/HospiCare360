<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.avif", alt: "Logo", class: "logo" %>
      <span class="navbar-text ms-2">HospiCare360</span>
    <% end %>
    <button class="navbar-toggler" type="button" class="btn btn-primary" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0 center-links">
        <% if user_signed_in? %>
          <li class="nav-item text">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Services", services_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "About us", info_meet_us_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", alt: "User avatar" %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <% if current_user.type == "Patient" %>
                <li><%= link_to "Profile", profiles_home_path, class: "dropdown-item" %></li>
              <% else %>
                <li><%= link_to "Dashboard", admin_doctors_path, class: "dropdown-item" %></li>
              <% end %>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %></li>
            </ul>
          </li>
<% else %>
  <li class="nav-item">
    <%= link_to "Login", new_user_session_path, class: "btn btn-primary btn-lg" %>
  </li>
<% end %>

      </ul>
    </div>
  </div>
</div>

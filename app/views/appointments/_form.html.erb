<%= form_with(model: appointment, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :date %>
    <%= form.datetime_select :date, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :doctor_id, 'Doctor' %>
    <%= form.collection_select :doctor_id, Doctor.all, :id, :name, {}, { class: 'form-control' } %>
  </div>

  <div class="mb-3">
    <%= form.label :patient_id, 'Patient' %>
    <%= form.collection_select :patient_id, Patient.all, :id, :name, {}, { class: 'form-control' } %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>
